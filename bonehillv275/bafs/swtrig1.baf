IF
  Global("AR9702_HIDDEN_DOOR_STATE","GLOBAL",0)
  OpenState(Myself,TRUE)
THEN
  RESPONSE #100
    SetGlobal("AR9702_HIDDEN_DOOR_STATE","GLOBAL",1)
END

IF
  !Global("AR9702_HIDDEN_DOOR_STATE","GLOBAL",0)
