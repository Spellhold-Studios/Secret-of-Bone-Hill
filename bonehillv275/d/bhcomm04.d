BEGIN ~BHCOMM04~

IF WEIGHT #0 ~RandomNum(7,1)~ THEN BEGIN 0
  SAY @0
  IF ~~ THEN DO ~SetGlobal("BHKnowOrcRaids","GLOBAL",1)~ JOURNAL @1 EXIT
END

IF WEIGHT #1 ~RandomNum(7,3)~ THEN BEGIN 1
  SAY @2
  IF ~~ THEN JOURNAL @3 EXIT
END

IF WEIGHT #5 ~RandomNum(7,2)~ THEN BEGIN 2
  SAY @4
  IF ~~ THEN DO ~SetGlobal("BHKnowOrcRaids","GLOBAL",1)~ JOURNAL @5 EXIT
END

IF WEIGHT #2 ~RandomNum(7,5)~ THEN BEGIN 3
  SAY @6
  IF ~~ THEN REPLY @7 GOTO 6
END

IF WEIGHT #3 ~StateCheck(Myself,STATE_CHARMED)~ THEN BEGIN 4
  SAY @8
  IF ~~ THEN EXIT
END

IF WEIGHT #4 ~RandomNum(7,4)~ THEN BEGIN 5
  SAY @9
  IF ~~ THEN EXIT
END

IF ~~ THEN BEGIN 6
  SAY @10
  IF ~~ THEN JOURNAL @11 EXIT
END

IF WEIGHT #6 ~RandomNum(7,6)~ THEN BEGIN 7
  SAY @12
  IF ~~ THEN REPLY @13 GOTO 8
END

IF ~~ THEN BEGIN 8
  SAY @14
  IF ~~ THEN EXIT
END

IF WEIGHT #7 ~RandomNum(7,7)~ THEN BEGIN 9
  SAY @15
  IF ~~ THEN REPLY @16 GOTO 10
END

IF ~~ THEN BEGIN 10
  SAY @17
  IF ~~ THEN REPLY @18 GOTO 11
END

IF ~~ THEN BEGIN 11
  SAY @19
  IF ~~ THEN DO ~RandomWalk()~ EXIT
END
